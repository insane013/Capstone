@using Microsoft.AspNetCore.Http.Extensions
@{
	Layout = null;
	var returnUrl = Context.Request.GetEncodedUrl();
}

<div class="modal fade" id="tagModal" tabindex="-1" aria-labelledby="tagModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<form asp-controller="TodoTask" asp-action="UpdateTags" id="tag-modal-form" method="post">
				<div class="modal-header">
					<h5 class="modal-title" id="tagModalLabel">Edit task's tags'</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input type="hidden" name="todoListId" id="tagListId" />
					<input type="hidden" name="taskId" id="tagTaskId" />
					<input type="hidden" name="returnUrl" value="@returnUrl" />
					<div class="form-group">
						<div class="mb-3">
							<label for="taskTags" class="form-label">Tag(s)</label>
							<input name="Tags" id="taskTags" class="form-control" placeholder="Enter one or more tag..." />
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>