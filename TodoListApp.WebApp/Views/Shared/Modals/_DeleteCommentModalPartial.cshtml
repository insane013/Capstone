@{
	Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="deleteCommentModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<form asp-controller="Comment" asp-action="Delete" method="post" id="delete-comment-form">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteCommentModalLabel">Delete Comment</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input type="hidden" name="Id" id="delete-comment-id" />
					<input type="hidden" name="CreatedUserId" id="delete-comment-userId" />
					<input type="hidden" name="TaskId" id="delete-comment-taskId" />
					<p class="text-muted" id="delete-comment-content"></p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-danger">Delete</button>
				</div>
			</div>
		</form>
	</div>
</div>
