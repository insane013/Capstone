@model TodoListApp.Models.TodoList.TodoListModel

<a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" class="text-decoration-none link-dark">
	<div class="bg-white rounded shadow-sm p-3 mb-3">
		<div class="d-flex justify-content-between align-items-center">
			<h2>@Model.Title</h2>
			<div>
				<i class="fas fa-pen" title="editing" style="color: #0d6efd; font-size: 20px;"></i>
				<i class="fas fa-eye" title="reading" style="color: #198754; font-size: 20px;"></i>
				<i class="fas fa-crown" title="owner" style="color: #ffc107; font-size: 20px;"></i>
			</div>
		</div>
		<div class="d-flex justify-content-between align-items-center">
			<p>@Model.Description</p>
			<div>
				@Model.CompletedTaskCount / @Model.TaskCount
			</div>
		</div>
		<hr>
		<p class="text-muted small">@Model.CreatedTime.ToString("yyyy-MM-dd HH:mm")</p>
	</div>
</a>
