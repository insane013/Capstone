@model TodoListApp.Models.Invite.InviteModel

@{
	Layout = null;
	var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="bg-white rounded shadow-sm p-3 border-start border-5 border-primary d-grid align-items-center" style="grid-template-columns: 200px 1fr 180px auto; gap: 1rem;">
	<div class="text-dark fw-semibold fs-6 text-truncate">
		@Model.TodoListTitle
	</div>
	<div class="text-muted fs-6 text-truncate">
		@Model.Message
	</div>
	<div class="text-muted fs-6">
		@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")
	</div>
	<div class="d-flex gap-2 justify-content-end">
		<form asp-controller="Invite" asp-action="Response" method="post">
			<input type="hidden" name="TodoListId" value="@Model.TodoListId" />
			<input type="hidden" name="Id" value="@Model.Id" />
			<input type="hidden" name="UserId" value="@userId" />
			<input type="hidden" name="Accepted" value="true" />
			<button type="submit" class="btn btn-success d-flex align-items-center justify-content-center p-2" style="width: 36px; height: 36px;">
				<i class="fas fa-check text-white"></i>
			</button>
		</form>
		<form asp-controller="Invite" asp-action="Response" method="post">
			<input type="hidden" name="TodoListId" value="@Model.TodoListId" />
			<input type="hidden" name="Id" value="@Model.Id" />
			<input type="hidden" name="UserId" value="@userId" />
			<input type="hidden" name="Accepted" value="false" />
			<button type="submit" class="btn btn-outline-danger d-flex align-items-center justify-content-center p-2" style="width: 36px; height: 36px;">
				<i class="fas fa-ban"></i>
			</button>
		</form>
	</div>
</div>







